spinner(ng-show='state.isPending()')

.panel.panel-warning(ng-show='state.isError()')
   .panel-heading Error loading content
   .panel-body Service is unavailable

table.table.user-list(ng-show='state.isLoaded() && invitations.length > 0', ng-table='tableParams', template-header="invitations-table-header")
   tr.user-list-item(data-ng-repeat='invitation in $data')
      td {{ invitation }}
      td
         .pending-buttons
            button.btn.btn-primary(ng-click="resend(invitation)")
                | Resend

            button.btn.btn-danger(ng-click="delete(invitation)")
                | Delete
div(ng-show='state.isLoaded() && invitations.length === 0')
   | No pending invitations




script(type="text/ng-template" id="invitations-table-header")
   tr
      th(sortable="'email'") E-mail
      th
