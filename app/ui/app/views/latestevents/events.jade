h3
    d-target-selector.pull-right(hide-space="true")
    | Latest events

.events(ng-controller='LatestEventsController')
    .panel
        button.btn.btn-default(type='button', dropdown-toggle="", ng-disabled="state.isPending()")
        | {{ targetCtrl.organization.selected.name }}

        d-spinner(ng-show="state.isPending()")
        div(ng-show="state.isLoaded()")
            table.table.list-group(ng-table='tableParams')
                thead
                    th Time
                    th SourceName
                    th Category
                    th Message
                tbody
                    tr(ng-repeat="event in $data")
                        td {{ event.timestamp | date : "yyyy-MM-dd 'at' HH:mm:ss.sss" }}
                        td {{ event.sourceName }}
                        td {{ event.category }}
                        td {{ event.message }}
