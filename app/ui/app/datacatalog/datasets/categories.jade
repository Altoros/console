.categories.form-group

    div
        label Choose category:

    a.btn-radio(ng-click='changeCategory(null)', ng-class='{ "active": !category }')
        div.fa.fa-globe
        | all
    a.btn-radio(data-ng-repeat='c in categories'
            ng-click='changeCategory(c)', ng-class='{ "active": category === c }')
        div(class='fa fa-{{ getIcon(c) }}')
        | {{c}}
